rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Article images - read all, write denied (admin/CF only)
    match /articles/{articleId}/{fileName} {
      allow read: if true;
      allow write: if false; // Client never writes
    }

    // Submission attachments - write/read by submission owner only
    match /submissions/{submissionId}/attachments/{fileName} {
      allow write: if request.auth != null
        && request.auth.uid == firestore.get(/databases/(default)/documents/submissions/$(submissionId)).data.user_id;
      allow read: if request.auth != null
        && request.auth.uid == firestore.get(/databases/(default)/documents/submissions/$(submissionId)).data.user_id;
    }

    // Deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
